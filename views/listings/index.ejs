<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    /* gap: 1rem;
    margin-top: 1rem; */
  }

  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p{
    font-size: 0.8rem;;
  }

  .tax-info{
    display: none;
  }

  .tax-toggle{
    border:1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 5rem;
    display: flex;
    margin-top: 1rem;
    align-items: center;
  }
</style>


<div id="filters">
  <div class="filter" data-category="Trending">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter" data-category="Rooms">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter" data-category="Iconic Cities">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter" data-category="Mountains">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter" data-category="Castles">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter" data-category="Amazing Pools">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter" data-category="Camping">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter" data-category="Farms">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter" data-category="Arctic">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter" data-category="Boats">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>



  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
  </div>
 </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <!-- <div class="col">
    <a href="/listings/new" class="btn btn-primary">Create New Listing</a>
  </div> -->
<% for(let listing of allListings) { %>

  <a href="/listings/<%= listing._id %>" class="listing-link">
<div class="card col listing-card" >
  <img src="<%= listing.image.url %>" 
      class="card-img-top" 
      alt="listing_image" 
      style="height: 20rem;"/>
  <div class="card-img-overlay"> </div>
  <div class="card-body">
    <p class="card-text">
      <%= listing.title %></br>
      &#8377; <%= listing.price%> /night
      <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
    </p>
  </div>
</div>
</a>
<% } %>
</div>

<!-- Removed duplicate filters declaration and click handler; logic is handled in the script below. -->


<script>
  // Tax Toggle Switch
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Category Filter Redirect + Highlighting
  const filters = document.querySelectorAll('.filter');
  const activeCategory = "<%= category || '' %>";

  filters.forEach(filter => {
    const cat = filter.getAttribute('data-category');

    // Highlight active category
    if (cat === activeCategory) {
      filter.style.opacity = 1;
      filter.style.fontWeight = "bold";
      filter.style.borderBottom = "2px solid black";
    }

    // Add click event for redirect
    filter.addEventListener('click', () => {
      window.location.href = `/listings?category=${encodeURIComponent(cat)}`;
    });
  });
</script>

